<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Nexus.domain.user.mapper.UserMapper">

    <select id="findByUserId" resultType="com.example.Nexus.domain.user.dto.object.User">
        SELECT
            id,
            user_id AS userId,
            password,
            username
        FROM users
        WHERE user_id = #{userId}
    </select>

</mapper>